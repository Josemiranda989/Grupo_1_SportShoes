<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Profile"}) %>

<body>
  <!-- NAVBAR -->
  <%- include('../partials/header') %>

  <!-- bootstrap user profile -->
  <div class="container fondo-form">
    <div class="row">
      <div class="col">
        <div class="d-flex justify-content-center pt-2">
          <img class="profile-picture" src="/images/avatars/<%=user.avatar%>" alt="User profile" style="width:400px; object-fit:cover">
        </div>
        <div class="col">
          <div>
            <h5 class="card-title"><%= user.userName %></h5>
            <table class="table table-bordered ">
              <tr>
                <td style="background:#b1afaf;color:#2f2a2a">Full Name</td>
                <td style="background:#ebebeb;"><%= user.fullName %></td>
              </tr>
              <tr>
                <td style="background:#b1afaf;color:#2f2a2a">E-mail</td>
                <td style="background:#ebebeb;"><%= user.email %></td>
              </tr>
              <tr>
                <td style="background:#b1afaf;color:#2f2a2a">Country</td>
                <td style="background:#ebebeb;"><%= user.country %></td>
              </tr>
              <tr>
                <td style="background:#b1afaf;color:#2f2a2a">Address</td>
                <td style="background:#ebebeb;"><%= user.address %></td>
              </tr>
            </table>
          </div>
        </div>


<div class='row'>
        <div class="col-6 d-flex justify-content-center  mb-2">
          <a href="/user/edit/<%= user.user_id %>" class="buy-now-button btn btn-secondary">Edit</a>
        </div>
        <div class="col-6 d-flex justify-content-center  mb-2">
            <form action="/user/delete/<%= user.user_id %>?_method=DELETE" method="POST">
              <button class="buy-now-button btn btn-danger" type="submit" name="delete">Delete</button>
            </form>
        </div>
</div>        

      </div>
    </div>
  </div>

  <!-- FOOTER -->

  <%- include('../partials/footer') %>

  <!-- SCRIPTS -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>
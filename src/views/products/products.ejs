<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Catalog"}) %>

<body>
  <!-- NAVBAR -->
  <%- include('../partials/header') %>

  <!-- todos los productos -->
  <div class="d-flex justify-content-between p-3">
        <h1> <%- titulo %> </h1>
<% if (locals.isLogged) { %>

<a class="sinestiloA btn-catalog" href="/products/create">
  Create a new product
</a>
<% } %>
  </div>

  <div class="dropdown px-5">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      ORDENAR
    </button >
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <li><a class="dropdown-item" href="/products/asc">Menor a mayor</a></li>
      <li><a class="dropdown-item" href="/products/desc">Mayor a menor</a></li>
    </ul>
  </div>


  <div class="row row-cols-1 row-cols-md-4 g-4 fondo-form">

    <% for (i=0 ; i < allShoes.length ; i++) { %>
    <div >
      <a class="sinestiloA" href="/products/detail/<%= allShoes[i].product_id%>">
        <div class="col">
          <div class="card">
            <h5 class="card-title ttl-catalog">
              <%= allShoes[i].productName %>
            </h5>
            <div class="contenedor-imagen empuje-empuje">
                          <img src="/images/shoes-img/<%= allShoes[i].productName%>/<%= allShoes[i].img1%>" class="card-img-top" alt="imagen de <%=allShoes[i].productName%>">
            </div>

      </a>
      <div class="card-body d-flex justify-content-between">
        <div>
          <p class="card-text">
            <strong>Price</strong> $<%= allShoes[i].price %>
          </p>
          <p class="card-text">
            <strong>Brand</strong> <%= allShoes[i].brand %>
          </p>
        </div>
        <% if (locals.isLogged) { %>
        <a class="sinestiloA btn-catalog" href="/products/edit/<%= allShoes[i].product_id%>">
          Edit
        </a>
        <% } %>
      </div>
    </div>
  </div>
  </div>
  <% } %>
  </div>

  <!-- FOOTER -->

  <%- include('../partials/footer') %>

  <!-- SCRIPTS -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>
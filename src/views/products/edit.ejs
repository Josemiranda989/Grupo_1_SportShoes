<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Product Edit" }) %>

<body>
  <!-- NAVBAR -->
  <%- include('../partials/header') %>

  <!-- EDIT CONTAINER -->

  
  <div class="container products-wrapper fondo-form">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title pt-5">
          Edit: <%= productToEdit.productName %>
        </h2>
      </div>
    </div>
    <!-- FORM TO EDIT -->

    <div class="col-12">
      <form action="/products/edit/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data"id="formulario">
        <div class="row product-detail">
          <div class="col-12 col-md-6">
            <label for="productName" class="form-label">Name:</label>
            <input type="text" id="productName" name="productName" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= productToEdit.productName %>" readonly>
          </div>
          <div class="col-12 col-md-6">
            <label for="price" class="form-label">Price:</label>
            <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= productToEdit.price %>">
          </div>
          <div class="col-12 col-md-6">
            <label for="brand" class="form-label">Brand:</label>
            <input type="text" id="brand" name="brand" placeholder="Ej: Adidas" class="form-input" value="<%= productToEdit.brand %>">
          </div>
          <div class="col-12 col-md-6">
            <label for="size" class="form-label">Size:</label>
            <input type="text" id="size" name="size" placeholder="Ej: 15" class="form-input" value="<%= productToEdit.size %>">
          </div>
          <div class="col-12 col-md-6">
            <label for="color" class="form-label">Color:</label>
            <input type="text" id="color" name="color" placeholder="Ej: Blue" class="form-input" value="<%= productToEdit.color %>">
          </div>

          <div class="col-12 col-md-6">
            <label for="category" class="form-label">Category:</label>
            <select name="category" id="category" class="form-input">
              <% if (productToEdit.category==='Men´s' ) { %>
              <option value="">Select</option>
              <option value="Men´s" selected>Men's</option>
              <option value="Women´s">Women's</option>
              <% } else { %>
              <option value="">Selected</option>
              <option value="Men´s">Men's</option>
              <option value="Women´s" selected>Women's</option>
              <% } %>
            </select>
          </div>
          <div class="col-12 col-md-12">
            <label for="img" class="form-label">Image :</label>
            <input accept="image/png, image/jpeg, image/jpg, image/gif" type="file" id="img" name="img" placeholder="Image" class="form-input"> 
                     <!--? Validacion Front -->
          <p id="errimg" class="msg-errors hidden"></p>
          </div>

          <div class="col-12">
            <label for="description" class="form-label">Description:</label>
            <textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
          </div>


          <div class="col-6 d-flex justify-content-center mb-2">
            <button type="submit " name='edit' class="button">Save Changes</button>
          </div>
      </form>
      <!-- FORM DELETE -->
      <div class="col-6 d-flex justify-content-center mb-2">
        <form action="/products/delete/<%= productToEdit.id %>?_method=DELETE" method="POST">
          <button class="button" type="submit" name="delete">Delete this Product</button>
        </form>
      </div>
    </div>
  </div>
  </div>

  <!-- FOOTER -->
   <%- include('../partials/footer', {fixed: false}) %>

  <!-- SCRIPTS -->
  <%- include('../partials/scripts') %> 
</body>

</html>
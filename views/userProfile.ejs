<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {title: "Profile"}) %>

<body>
  <!-- NAVBAR -->
  <%- include('./partials/header') %>

<div class="container d-flex justify-content-center fondo-form " style="margin: 40px auto;height:700px;">
  <div class="row">
    <div class="col-md-12">
      <div class="border border-primary  ">Hi <%= user.fullName %> </div>
      <div class="border border-primary "> <%= user.userName %> </div>
      <div class="border border-primary "> <%= user.country %> </div>
      <div class="border border-primary "> <%= user.email %> </div>
      <div class="border border-primary "> <%= user.address %> </div>

      <div>
          <img class = "imagenavatar" src ="/images/avatars/<%=user.avatar%>">
      </div>
      <br>
      <br>
      <div class="alert alert-success"><%= user.email %></div>
    </div>
    <div class="col-12  mb-2">
      <a href="/user/edit/<%= user.user_id %>" class="buy-now-button btn btn-secondary">Edit</a>
    </div>
  </div>
</div>

  <!-- FOOTER -->

  <%- include('./partials/footer') %>

  <!-- SCRIPTS -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>